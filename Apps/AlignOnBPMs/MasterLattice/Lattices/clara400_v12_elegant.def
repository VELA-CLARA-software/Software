global:
  SC_2D_Nrad: 30
  SC_2D_Nlong: 45
  SC_3D_Nxf: 8
  SC_3D_Nyf: 8
  SC_3D_Nzf: 8
  accuracy: 6
  initial_distribution: '../1k-250pC-76fsrms-1mm_TE09fixN12.ini'
  ASTRAsettings:
    High_res: True
    N_red: 1
    EmitS: True
    PhaseS: True
    TrackS: True
    RefS: True
    Track_All: True
    Phase_Scan: False
    Auto_Phase: True
    check_ref_part: False
    Zphase: 1
    Zemit: 1050
    H_max: 0.0007
    H_min: 0.0007
    title: 'trial'
    run_no: 1
    Smooth_x: 2
    Smooth_y: 2
    Smooth_z: 2
    Max_scale: 0.1
    Max_count: 100
    cell_var: 2
    min_grid: 3.424657e-13
    Lmagnetized: False
generator:
  default: clara_400_3ps
  number_of_particles: 2**(3*4)
files:
  injector400:
    code: ASTRA
    charge:
      cathode: True
      space_charge_mode: 2D
      mirror_charge: True
    input:
      particle_definition: 'initial_distribution'
    output:
      zstart: 0
      end_element: CLA-S02-APER-01
  S02:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    output:
      start_element: CLA-S02-APER-01
      end_element: CLA-L02-APER
  L02:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-L02-APER
      end_element: CLA-S03-APER
  S03:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S03-APER
      end_element: CLA-L03-APER
  L03:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-L03-APER
      end_element: CLA-S04-APER
  S04:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S04-APER
      end_element: CLA-L4H-APER
    groups:
      laser-heater:
        dipoleangle: 0.0001
        width: 0.2
        gap: 0.02
  L4H:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-L4H-APER
      end_element: CLA-S05-APER
  S05:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S05-APER
      end_element: CLA-S05-MARK-01
  VBC:
    code: csrtrack
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S05-MARK-01
      end_element: CLA-S06-MARK-01
    groups:
      bunch_compressor:
        dipoleangle: 0.1185
        width: 0.2
        gap: 0.02
  S06:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S06-MARK-01
      end_element: CLA-L04-APER
  L04:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-L04-APER
      end_element: CLA-S07-APER-01
  S07:
    code: ASTRA
    charge:
      cathode: False
      space_charge_mode: 3D
    input:
      particle_definition: $output['start_element']$.astra
    output:
      start_element: CLA-S07-APER-01
      end_element: CLA-S07-MARK-03
groups:
  laser-heater:
    type: chicane
    elements: [CLA-S04-MAG-DIP-01, CLA-S04-MAG-DIP-02, CLA-S04-MAG-DIP-03, CLA-S04-MAG-DIP-04]
  bunch_compressor:
    type: chicane
    elements: [CLA-VBC-MAG-DIP-01, CLA-VBC-MAG-DIP-02, CLA-VBC-MAG-DIP-03, CLA-VBC-MAG-DIP-04]
elements:
  filename: YAML/CLA_Gun400.yaml
